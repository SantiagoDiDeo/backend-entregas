<section class='p-4 bg-success bg-gradient'>
	<h2 class='alert alert-dark text-center'>Lista de productos</h2>
	{{#if productos}}
		<table class='table container '>
			<thead>
				<tr>
					<th scope="col">Nombre</th>
					<th scope="col">Precio</th>
					<th scope="col">Imagen</th>
				</tr>
			</thead>
			<tbody>
				{{#each productos}}
					<tr>
						<td>{{this.title}}</td>
						<td>{{this.price}}</td>
						<td><img src='{{this.thumbnail}}' style="max-width: 50px; heigth: auto" />
						</td>
					</tr>
				{{/each}}
			</tbody>
		</table>
	{{else}}
		<div class='alert alert-info container' role="alert">No se encontraron productos</div>
	{{/if}}
</section>